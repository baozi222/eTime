<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#b5555555"
	android:layout_gravity="center_vertical" android:gravity="center">

	<RelativeLayout
		android:id="@+id/weibosdk_rlTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/weibosdk_bg_title">
		<Button
			android:text="关闭" 
			android:id="@+id/closeBn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#fff"
			android:textSize="12sp"
			android:layout_marginLeft="6dp"
			android:layout_marginTop="8dp"
			android:paddingBottom="2dp"
			android:background="@drawable/weibosdk_bg_btn"
			android:layout_alignParentLeft="true"/>
				
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="false"
		    android:layout_centerVertical="false"
		    android:layout_toRightOf="@+id/closeBn"
		    android:text="@string/weibosdk_share_dialog_title"
		    android:textColor="#000"
		    android:layout_marginLeft="6dp"
		 android:layout_marginTop="8dp"
		    android:textStyle="bold" />

			
	
		<Button
			android:text="评论" 
			android:id="@+id/sendBn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#fff"
			android:textSize="12sp"
			android:layout_marginRight="6dp"
			android:layout_marginTop="8dp"
			android:paddingBottom="2dp"
			android:background="@drawable/weibosdk_bg_btn"
			android:layout_alignParentRight="true"/>
	</RelativeLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/weibosdk_bg_content">
		<EditText 
		android:gravity="top" android:hint="评论微博"		android:height="160dp" android:id="@+id/editText"
			android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>
		<!--android:background="@drawable/downbutton_corner" -->
<!--android:background="@drawable/downbutton_corner" -->
<RelativeLayout
				android:id="@+id/weibosdk_rlTotal"
				android:layout_width="fill_parent"
				android:layout_height="40dp">
				
				<LinearLayout
					android:id="@+id/weibosdk_ll_text_limit_unit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"
					android:gravity="center"
					android:background="@drawable/weibosdk_bg_delwords"
					android:focusable="true"
					android:clickable="true" 
					android:layout_alignParentBottom="false">
					
					<TextView
						android:id="@+id/weibosdk_tv_text_limit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="140"
						android:layout_marginRight="5dp"
						android:textColor="#333"/>
					
					<ImageView
						android:src="@drawable/weibosdk_icon_delwords"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" />
					
				</LinearLayout>
				
			</RelativeLayout>
	</LinearLayout>
	
</LinearLayout>